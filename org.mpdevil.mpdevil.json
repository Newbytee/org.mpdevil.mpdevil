{
  "app-id": "org.mpdevil.mpdevil",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "command": "mpdevil",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--filesystem=xdg-music",
    "--filesystem=xdg-run/mpd",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.FileManager1",
    "--own-name=org.mpris.MediaPlayer2.mpdevil"
  ],
  "modules": [
    "python-libs.json",
    {
      "name": "mpdevil",
      "sources": [{
        "type": "git",
        "url": "https://github.com/SoongNoonien/mpdevil.git",
        "tag": "v1.10.0",
        "commit": "65668a4163cc46f6c36bfcfaf4d86adfa2464604"
      }],
      "buildsystem": "simple",
      "build-commands": [
        "meson builddir --prefix=/app",
        "ninja -C builddir install",
        "glib-compile-schemas /app/share/glib-2.0/schemas"
      ]
    }
  ]
}
